<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="hBox" alignment="CENTER" maxHeight="300.0" maxWidth="250.0" minHeight="300.0" minWidth="250.0" prefHeight="300.0" prefWidth="250.0" styleClass="menuBG" stylesheets="@../css/menu_game.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="github.com.youknow2509.battleship.controller.GameMenuController">
    <children>
        <VBox alignment="CENTER" maxHeight="211.0" maxWidth="110.0" minHeight="211.0" minWidth="110.0" prefHeight="211.0" prefWidth="110.0" spacing="25.0" HBox.hgrow="ALWAYS">
            <children>
                <Button fx:id="tiepTuc" layoutX="-6.0" layoutY="3.0" maxHeight="55.0" maxWidth="130.0" minHeight="55.0" minWidth="130.0" mnemonicParsing="false" onAction="#handleClickBtnTiepTuc" prefHeight="55.0" prefWidth="130.0" text="Tiếp Tục" VBox.vgrow="ALWAYS">
                    <styleClass>
                        <String fx:value="menu" />
                        <String fx:value="menuText" />
                    </styleClass>
                </Button>
                  <Button fx:id="newGame" alignment="CENTER" contentDisplay="CENTER" maxHeight="55.0" maxWidth="130.0" minHeight="55.0" minWidth="130.0" mnemonicParsing="false" onAction="#handleClickBtnGameMoi" prefHeight="55.0" prefWidth="130.0" text="Game Mới">
                      <styleClass>
                          <String fx:value="menu" />
                          <String fx:value="menuText" />
                      </styleClass>
                  </Button>
                <Button fx:id="quayLaiHome" layoutX="-6.0" layoutY="3.0" maxHeight="55.0" maxWidth="130.0" minHeight="55.0" minWidth="130.0" mnemonicParsing="false" onAction="#handleClickBtnThoat" prefHeight="55.0" prefWidth="130.0" text="Thoát" VBox.vgrow="ALWAYS">
                    <styleClass>
                        <String fx:value="menu" />
                        <String fx:value="menuText" />
                    </styleClass>
                </Button>
            </children>
        </VBox>
    </children>
</HBox>
